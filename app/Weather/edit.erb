<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @weather.city %></h1>
    <a href="<%= url_for :action => :show, :id => @weather.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @weather.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @weather.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="weather[city]" class="fieldLabel">City</label>
            <input type="text" id="weather[city]" name="weather[city]" value="<%= @weather.city %>" <%= placeholder( "City" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
